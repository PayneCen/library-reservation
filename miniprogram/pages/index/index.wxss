/* pages/index/index.wxss */
page {
    background-color: #fff;
}

.banner, .notice{
    background-color: #fff;
}

.swip-main, .swip-notice {
    height: 90%;
    margin: 2.5% 2.5%;
}

.notice {
    width: 95%;
    height: 85rpx;
    margin: 0 auto;
    border-radius: 20rpx;
    border: 1rpx solid #6B397F;
}

.banner {
    height: 350rpx;
}

.notice-left {
    width: 25%;
    height: 100%;
    float: left;
}

.notice-right {
    width: 75%;
    height: 100%;
    float: left;
}

.notice-left > image {
    float: left;
    width: 60rpx;
    height: 60rpx;
    margin-top: 12rpx;
    margin-left: 15rpx;
}

.notice-title {
    float: left;
    line-height: 85rpx;
    font-weight: 500;
    font-size: 35rpx;
    margin-left: 16rpx;
    color: #6B397F;
}

.notice-text {
    margin: 0;
    padding: 0;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 60rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    letter-spacing: 2rpx;
    text-align: center;
    color: #707070;
}

.news {
    width: 95%;
    min-height: 300rpx;
    margin: 20rpx auto;
    background-color: #fff;
}

.title {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-left: 10rpx solid #6B397F;
    padding-left: 20rpx;
    font-weight: 600;
    display: block;
}

.news-box {
    width: 100%;
    height: 200rpx;
    margin: 15rpx auto;
}

.news-img {
    width: 300rpx;
    height: 200rpx;
    float: left;
    margin: 0 10rpx;
}

.news-img image {
    width: 100%;
    height: 100%;
}

.news-text {
    width: 350rpx;
    height: 200rpx;
    float: left;
    margin-left: 24rpx;
}

.news-title {
    width: 100%;
    height: 160rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    color: #472753;
    font-weight: 500;
}

.news-time {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    color: #909090;
    font-size: 28rpx;
}