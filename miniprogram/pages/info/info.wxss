/* pages/info/info.wxss */
.card {
    width: 95%;
    height: 500rpx;
    margin: 30rpx auto;
    border-radius: 50rpx;
}

.info_title, image {
    display: block;
}

.profile {
    border: 10rpx solid #D0D0D0;
    background-color: #fff;
    margin: -430rpx 0 120rpx 50rpx;
    width: 280rpx;
    height: 280rpx;
    border-radius: 50%;
}

.info_title {
    color: #fff;
    font-size: 32rpx;
    margin: 20rpx 10px;
    height: 32px;
    line-height: 32px;
}

.content {
    width: 47%;
    margin: -430rpx 50%;
    background-color: #6B397F;
}

.update {
    width: 95%;
    border-radius: 30rpx;
    margin: 0 auto;
    margin-top: 530rpx;
    font-size: 36rpx;
    line-height: 60rpx;
    text-align: center;
    font-weight: 500;
    background-color: #6B397F;
    color: white;
    padding: 20rpx 0;
}

input {
    width: 70%;
    border-radius: 10rpx;
    border: 2rpx solid #aaa;
    height: 60rpx;
}

.inp {
    margin: 60rpx auto;
    display: flex;
}

.tit {
    width: 25%;
}

.btn {
    margin: 0 auto;
    width: 95%;
    display: flex;
    margin-top: 50rpx;
}

.btn_update {
    color: white;
    height: 110rpx;
    line-height: 80rpx;
    background-color: #3E54A4;
    border-radius: 20rpx 0 0 20rpx;
}

.btn_cancle {
    color: white;
    height: 110rpx;
    line-height: 80rpx;
    background-color: #A23630;
    border-radius: 0 20rpx 20rpx 0;
}

