/* pages/user/user.wxss */
page {
    background-color: #fff;
}

.my_top image{
    width: 100%;
    height: 480rpx;
}

.profile {
    box-shadow: 0rpx 10rpx 30rpx 0rpx #222;
    border:10rpx solid #fff;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin: 30rpx auto;
    overflow: hidden;
}

.profile > image {
    width: 100%;
    height: 100%;
}

.username {
    color: #fff;
    max-width: 480rpx;
    margin: 0 auto;
    font-weight: 600;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.nav_my {
    width: 90%;
    height: 180rpx;
    background-color: #fff;
    margin: 0 auto;
    border-radius: 20rpx;
    margin-top: -120rpx;
    box-shadow: 0 0 20rpx rgb(0 0 0 / 20%);
}

.nav_item {
    width: 33.333%;
    height: 100%;
    float: left;
}

.nav_icon {
    width: 81rpx;
    height: 81rpx;
    margin: 0 auto;
    display: block;
    top: 28rpx;
    position: relative;
}

.nav_text {
    color: #7a7a7a;
    text-align: center;
    font-weight: 400;
    top: 44rpx;
    position: relative;
    font-size: 24rpx;
}

.top_title {
    width: 360rpx;
    letter-spacing: 6rpx;
    margin: 50rpx auto;
    text-align: center;
    color: white;
    font-size: 40rpx;
    font-weight: 700;
    margin-top: 100rpx;
}

.user_info {
    width: 100%;
    height: 480rpx;
    margin-top: -490rpx;
    background-color: rgb(107 57 127 /40%);
}

.unauthorized {
    color: #fff;
    font-weight: 600;
    text-align: center;
    font-size: 40rpx;
    margin-top: 120rpx;
}



